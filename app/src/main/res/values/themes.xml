<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.MIS" parent="Theme.Material3.DayNight">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/md_theme_primary</item>
        <item name="colorOnPrimary">@color/md_theme_on_primary</item>
        <item name="colorPrimaryContainer">@color/md_theme_primary_container</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_on_primary_container</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/md_theme_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_on_secondary</item>
        <item name="colorSecondaryContainer">@color/md_theme_secondary_container</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_on_secondary_container</item>
        
        <!-- Tertiary brand color -->
        <item name="colorTertiary">@color/md_theme_tertiary</item>
        <item name="colorOnTertiary">@color/md_theme_on_tertiary</item>
        <item name="colorTertiaryContainer">@color/md_theme_tertiary_container</item>
        <item name="colorOnTertiaryContainer">@color/md_theme_on_tertiary_container</item>
        
        <!-- Error colors -->
        <item name="colorError">@color/md_theme_error</item>
        <item name="colorErrorContainer">@color/md_theme_error_container</item>
        <item name="colorOnError">@color/md_theme_on_error</item>
        <item name="colorOnErrorContainer">@color/md_theme_on_error_container</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/md_theme_background</item>
        <item name="colorOnBackground">@color/md_theme_on_background</item>
        <item name="colorSurface">@color/md_theme_surface</item>
        <item name="colorOnSurface">@color/md_theme_on_surface</item>
        <item name="colorSurfaceVariant">@color/md_theme_surface_variant</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_on_surface_variant</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryContainer</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        
        <!-- Navigation bar -->
        <item name="android:navigationBarColor">?attr/colorSurface</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        
        <!-- Action bar -->
        <item name="actionBarTheme">@style/ThemeOverlay.MIS.ActionBar</item>
        <item name="actionBarStyle">@style/Widget.MIS.ActionBar</item>
    </style>
    
    <!-- No Action Bar Theme -->
    <style name="Theme.MIS.NoActionBar" parent="Theme.MIS">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    <!-- Splash Theme -->
    <style name="Theme.MIS.Splash" parent="Theme.MIS.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    
    <!-- Full Screen Theme for Video Calls -->
    <style name="Theme.MIS.FullScreen" parent="Theme.MIS.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowBackground">@color/video_call_background</item>
    </style>
    
    <!-- Action Bar Theme -->
    <style name="ThemeOverlay.MIS.ActionBar" parent="ThemeOverlay.Material3.ActionBar">
        <item name="colorPrimary">@color/md_theme_primary</item>
        <item name="colorOnPrimary">@color/md_theme_on_primary</item>
    </style>
    
    <!-- Action Bar Style -->
    <style name="Widget.MIS.ActionBar" parent="Widget.Material3.ActionBar.Solid">
        <item name="background">@color/md_theme_primary</item>
        <item name="titleTextColor">@color/md_theme_on_primary</item>
        <item name="subtitleTextColor">@color/md_theme_on_primary</item>
    </style>
    
    <!-- Toolbar Style -->
    <style name="Widget.MIS.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/md_theme_primary</item>
        <item name="titleTextColor">@color/md_theme_on_primary</item>
        <item name="subtitleTextColor">@color/md_theme_on_primary</item>
        <item name="android:theme">@style/ThemeOverlay.MIS.Toolbar</item>
    </style>
    
    <!-- Toolbar Theme -->
    <style name="ThemeOverlay.MIS.Toolbar" parent="ThemeOverlay.Material3.Toolbar">
        <item name="colorOnSurface">@color/md_theme_on_primary</item>
        <item name="colorControlNormal">@color/md_theme_on_primary</item>
    </style>
    
    <!-- Button Styles -->
    <style name="Widget.MIS.Button" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/md_theme_primary</item>
        <item name="android:textColor">@color/md_theme_on_primary</item>
    </style>
    
    <style name="Widget.MIS.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/md_theme_primary</item>
        <item name="android:textColor">@color/md_theme_primary</item>
    </style>
    
    <style name="Widget.MIS.Button.Text" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/md_theme_primary</item>
    </style>
    
    <!-- FloatingActionButton Style -->
    <style name="Widget.MIS.FloatingActionButton" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="backgroundTint">@color/md_theme_primary</item>
        <item name="tint">@color/md_theme_on_primary</item>
    </style>
    
    <!-- Card Style -->
    <style name="Widget.MIS.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/md_theme_surface</item>
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">12dp</item>
    </style>
    
    <!-- EditText Style -->
    <style name="Widget.MIS.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/md_theme_primary</item>
        <item name="hintTextColor">@color/md_theme_primary</item>
    </style>
    
    <!-- Tab Layout Style -->
    <style name="Widget.MIS.TabLayout" parent="Widget.Material3.TabLayout">
        <item name="tabSelectedTextColor">@color/md_theme_primary</item>
        <item name="tabTextColor">@color/text_secondary</item>
        <item name="tabIndicatorColor">@color/md_theme_primary</item>
        <item name="android:background">@color/md_theme_surface</item>
    </style>
    
    <!-- Bottom Navigation Style -->
    <style name="Widget.MIS.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="itemIconTint">@color/bottom_nav_color</item>
        <item name="itemTextColor">@color/bottom_nav_color</item>
        <item name="android:background">@color/md_theme_surface</item>
    </style>
    
    <!-- Text Styles -->
    <style name="TextAppearance.MIS.Headline1" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="TextAppearance.MIS.Headline2" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="TextAppearance.MIS.Body1" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="TextAppearance.MIS.Body2" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">14sp</item>
    </style>
    
    <style name="TextAppearance.MIS.Caption" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">@color/text_hint</item>
        <item name="android:textSize">12sp</item>
    </style>
    
    <!-- Chat Bubble Styles -->
    <style name="Widget.MIS.ChatBubble.Sent">
        <item name="android:background">@drawable/chat_bubble_sent</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="Widget.MIS.ChatBubble.Received">
        <item name="android:background">@drawable/chat_bubble_received</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
</resources>